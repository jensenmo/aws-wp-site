{
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.4",
    "composer/installers": "*",
    "johnpbloch/wordpress": "*",
    "wpackagist-plugin/code-snippets": "*",
    "wpackagist-plugin/wordpress-https": "*",
    "wpackagist-plugin/wp-piwik": "*",
    "wpackagist-plugin/jetpack": "*",
    "wpackagist-theme/zerif-lite": "*"
  },
  "extra": {
    "wordpress-install-dir": "public/wp",
    "installer-paths": {
      "public/wp/wp-content/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "public/wp/wp-content/plugins/{$name}/": ["type:wordpress-plugin"],
      "public/wp/wp-content/themes/{$name}/": ["type:wordpress-theme"]
    }
  }
}

